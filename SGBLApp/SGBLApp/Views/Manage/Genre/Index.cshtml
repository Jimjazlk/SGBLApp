@using SGBLApp.Core.Application.DTOs
@model IEnumerable<GenreDto>
@{
    ViewData["Title"] = "Gestión de Géneros";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <a asp-action="Create" class="btn btn-success mb-3">Crear</a>
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var genre in Model)
            {
                <tr>
                    <td>@genre.Name</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@genre.GenreId" class="btn btn-primary"><i class="fa-solid fa-pen-to-square" style="color: #ffffff;"></i></a>
                        <a asp-action="Delete" asp-route-id="@genre.GenreId" class="btn btn-danger"><i class="fa-solid fa-trash-can" style="color: #ffffff;"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {

    <!-- FontAwesome para íconos -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
}