@using SGBLApp.Core.Application.DTOs
@model AuthorDto
@{
    ViewData["Title"] = "Crear Autor";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <form asp-action="Create">
        <div class="form-group">
            <label asp-for="Name" class="control-label">Nombre</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span><br />
        </div>
        <div class="form-group">
            <label asp-for="Biography" class="control-label">Biografía</label>
            <textarea asp-for="Biography" class="form-control"></textarea>
            <span asp-validation-for="Biography" class="text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <input type="submit" value="Crear" class="btn btn-success" />
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>
