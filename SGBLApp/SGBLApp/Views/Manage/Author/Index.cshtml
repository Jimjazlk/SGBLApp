@using SGBLApp.Core.Application.DTOs
@model IEnumerable<AuthorDto>
@{
    ViewData["Title"] = "Gestión de Autores";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <a asp-action="Create" class="btn btn-success mb-3">Crear</a>
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Biografía</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var author in Model)
            {
                <tr>
                    <td>@author.Name</td>
                    <td>@author.Biography</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@author.AuthorId" class="btn btn-primary"><i class="fa-solid fa-pen-to-square" style="color: #ffffff;"></i></a><br />
                        <a asp-action="Delete" asp-route-id="@author.AuthorId" class="btn btn-danger"><i class="fa-solid fa-trash-can" style="color: #ffffff;"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
}